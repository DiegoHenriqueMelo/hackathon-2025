# =================================
# UNIAGENDAS BACKEND CONFIGURATION
# =================================

# Servidor
PORT=3000
NODE_ENV=development

# =================================
# BANCO DE DADOS POSTGRESQL
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uniagendas
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_SSL=false

# Para Railway/Heroku (usar DATABASE_URL ao invés dos parâmetros acima)
# DATABASE_URL=postgresql://user:password@host:port/database

# =================================
# OPENAI API CONFIGURATION
# =================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =================================
# AUTENTICAÇÃO JWT
# =================================
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# UPLOAD DE ARQUIVOS
# =================================
MAX_FILE_SIZE=10485760  # 10MB em bytes
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png
AUTO_DELETE_FILES=true  # Deletar arquivos após processamento

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW=15    # minutos
RATE_LIMIT_MAX=100      # requests por window
RATE_LIMIT_ENABLED=true

# =================================
# LOGS E MONITORING
# =================================
LOG_LEVEL=info          # error, warn, info, debug
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# =================================
# CORS CONFIGURATION
# =================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =================================
# RECURSOS OPCIONAIS
# =================================
# Email (opcional - para notificações)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu_email@gmail.com
# EMAIL_PASSWORD=sua_senha_app

# Redis (opcional - para cache)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600  # segundos

# Webhook (opcional - para integrações)
# WEBHOOK_SECRET=webhook_secret_key
# WEBHOOK_URL=https://seu-sistema.com/webhook